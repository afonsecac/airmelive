<div class="container">

<h4 align="center"><%= @event.eventname.upcase %></h4>
<div class="row">
		<%= image_tag @event.cloud_url ,:class => 'image_show_up' %>
</div>

<br><br>

<div class="row">  
	<div class="col-md-6">
			<legend class="section"><h4 style="color:green">DESCRIPTION</h4></legend>
			<p align="justify"><%= @event.description %></p>
      <% if @user %>
        <% unless @user.email == "airmelive@gmail.com"  %>
  			  <%= button_to "participate", upcoming_path(@event), class: "btn btn-success" %>
        <% end %>
      <% end %>
	</div>
  	<div class="col-md-6">
			<legend class="section"><h4 style="color:green">RULES</h4></legend>
			<p align="center"><%=@event.rules%></p>
	</div>
</div>

<br><br><br>

			<legend class="section"><h4 style="color:green">PARTICIPANTS</h4></legend>

<% if @users.empty? %> 

    <h4 align="center"> No Participants!!! </h4>

  <% else %>

    <div id="participants" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner" style="background-color:white;">
        
        <div class="item active">
          <div class="col-md-2"></div>
          <% for i in 0..3 %>
            <div class="col-md-2">
            	<% if @users[i] %>
              	<div class="thumbnail">              	
                	<a href="/public_profile/<%= @users[i].id %>/"><%= image_tag @users[i].user_cloud_url ,:class => 'image_show' %></a>
                	<div class="caption">
                  	<p><%= @users[i].name %></p>
                	</div>
              	</div>
              <% end %>
            </div>
          <% end %>
        </div>
        <% k = 4 %>
        <% for i in 0...round(@users.count-4) %>
          <div class="item">
            <div class="col-md-2"></div>
            <% for j in k...k+4 %>
              <% if @users[j]%>
                <div class="col-md-2">
                  <div class="thumbnail">
                    <a href="/public_profile/<%= @users[j].id %>/"><%= image_tag @users[j].user_cloud_url ,:class => 'image_show' %></a>
                    <div class="caption">
                      <p><%= @users[j].name %></p>
                    </div>
                  </div>
                </div>
              <% end %>
              <% k = j+1 %>
            <% end %>
          </div>
        <% end %>
   
    </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#participants" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" style="color:green;"></span>
      </a>
      <a class="right carousel-control" href="#participants" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" style="color:green;"></span>
      </a>
    </div>

  <%end%>


</div>




