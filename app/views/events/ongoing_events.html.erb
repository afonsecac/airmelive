<div class = "container">
	<% if @events.empty? %> 

  	<h1 align="center"> No Ongoing Events!!! </h1>

  <% else %>     
    <h3 style="color:green">On Going Events</h3>

    <div class="row">
      
    <% @events.each do |t| %>
      <div class="col-md-4">
        <div class="thumbnail">
          <%= t.eventname.upcase %>
          <%= image_tag t.cloud_url ,:class => 'image_show' %>
          <div class="caption">
            <p><%= t.description %></p>
            <% if session[:user_id] %>
                <% unless @user.email == "airmelive@gmail.com" %>
                   <%= button_to "Vote", upcomingevents_path, class: "btn btn-success" %>
                <% end %>
            <% else %>
                <%= button_to "Vote", upcomingevents_path, class: "btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    </div>
  <% end %>

</div>
