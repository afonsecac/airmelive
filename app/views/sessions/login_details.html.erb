<div class="container">
<div class="row">
    <div class="span7 offset3"> 
        <div class="form-actions">     
            <legend class="section"><h3>Personal Info</h3></legend>
            <%= form_for @user, :url => update_path, :html => { :multipart => true, method: "patch"} do |f| %>
            <h4>  <div class = "row">                 
                <div class="col-md-3">
                    <%= f.label :name %>:
                </div>
                <div class="col-md-4">
                    <%= f.text_field :name%>
                </div>   
            </div>
            <br> 
                  <div class = "row">                 
                <div class="col-md-3">
                    <%= f.label :age %>:
                </div>
                <div class="col-md-4">
                    <%= f.text_field :age%>
                </div>   
            </div>
            <br>
                   <div class = "row">                 
                <div class="col-md-3">
                    <%= f.label :city %>:
                </div>
                <div class="col-md-4">
                    <%= f.text_field :city%>
                </div>   
            </div>
            <br>
                   <div class = "row">                 
                <div class="col-md-3">
                    <%= f.label :country %>:
                </div>
                <div class="col-md-4">
                    <%= f.text_field :country%>
                </div>   
            </div>
            <br>
                   
                   <div class = "row">                 
                <div class="col-md-3">
                    <%= f.label :mobile %>:
                </div>
                <div class="col-md-4">
                    <%= f.text_field :mobile %>
                </div>   
            </div>
            <br>
                   
                  <div class = "row">                 
                <div class="col-md-3">
                    <%= f.label :image %>:
                </div>
                <div class="col-md-4">
                    <%= f.file_field :avatar %>
                </div>   
            </div>
            <br>
                   
                    <legend class="section"><h3>About Yourself</h3></legend>
                   
                   <div class = "row">                 
                <div class="col-md-3">
                    <%= f.label :likes %>:
                </div>
                <div class="col-md-4">
                    <%= f.text_area :likes%>
                </div>   
            </div>
            <br>

                   <div class = "row">                 
                <div class="col-md-3">
                    <%= f.label :dislikes %>:
                </div>
                <div class="col-md-4">
                    <%= f.text_area :dislikes%>
                </div>   
            </div>
            <br>

                   
                   <div class = "row">                 
                <div class="col-md-3">
                    <%= f.label :ambition %>:
                </div>
                <div class="col-md-4">
                    <%= f.text_area :ambition%>
                </div>   
            </div>
            <br>

                   
                   <div class = "row">                 
                <div class="col-md-3">
                    <%= f.label :talents %>:
                </div>
                <div class="col-md-4">
                    <%= f.text_area :talent%>
                </div>   
            </div>
            <br>

                   
                   <div class = "row">                 
                <div class="col-md-3">
                    <%= f.label :aboutme %>:
                </div>
                <div class="col-md-4">
                    <%= f.text_area :aboutme%>
                </div>   
            </div>
            <br>
            </h4>
        </div>
        <div class="form-actions">
            <%= f.submit "Update", :class => "btn btn-large btn-primary" %>
            <% end %>
        </div>               
    </div>
</div>
</div>